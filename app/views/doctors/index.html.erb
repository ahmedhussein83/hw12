<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table class="table table-bordered">
  <thead>
    <tr  class="success">
      <th>First name</th>
      <th>Last name</th>
      <th>License number</th>
      <th>Email</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.license_number %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone_number %></td>
        <td><%= link_to 'Show', doctor, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path, class:"btn btn-success" %>
