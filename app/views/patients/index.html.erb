<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table class="table table-bordered">
  <thead>
    <tr class="success">
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
     
      <th colspan="3"><center>Actions</center></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.status %></td>
       
        <td><%= link_to 'Show', patient, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class:"btn btn-success" %>
